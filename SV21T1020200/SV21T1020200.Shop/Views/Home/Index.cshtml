@model List<SV21T1020200.DomainModels.Product>
@{
    ViewData["Title"] = "Home Page";
}
<!-- Carousel -->
<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://moctinhhoa.vn/content/images/thumbs/0004076_chuong-trinh-khuyen-mai-khung-sam-noi-that-nhan-voucher-giam-gia-den-80.jpeg" class="d-block w-100" alt="..." style="width:1200px; height:400px;">
            </div>
            <div class="carousel-item">
                <img src="https://vinfastotominhdao.vn/wp-content/uploads/vinfast-fadil-lux-khuyen-mai-1110x577.jpg" class="d-block w-100" alt="..." style="width:1200px; height:400px;">
            </div>
            <div class="carousel-item">
                <img src="https://th.bing.com/th/id/OIP.i7m0cdvGe2V_L642ydxTggHaEe?pid=ImgDet&w=474&h=286&rs=1" class="d-block w-100" alt="..." style="width:1200px; height:400px;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

<!-- Featured Products -->
<section class="py-5 bg-light">
    <div class="container">
        <h2 class="text-center mb-4">Sản phẩm nổi bật</h2>
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-0 rounded">
                        <img src="~/images/products/@item.Photo" class="card-img-top" alt="Sản phẩm" style="height: 250px; object-fit: cover;">
                        <div class="card-body text-center">
                            <h5 class="card-title mb-3" style="font-size: 1.1rem; font-weight: bold; color: #333;">@item.ProductName</h5>
                            <p class="card-text" style="font-size: 0.9rem; color: #777;">@item.ProductDescription</p>
                            <a href="~/Product/Details/@item.ProductID" class="xemchitiet btn-primary mt-3" style="font-size: 1rem; padding: 10px 20px;">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

<style>
    /* Styling for the carousel */
    .carousel-item img {
        width: 100%;
        height: 400px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .carousel-item:hover img {
        transform: scale(1.1); /* Slight zoom effect on hover */
    }

    /* Product card styling */
    .card {
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px); /* Lift card on hover */
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        padding: 20px;
    }

    .card-title {
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 0.95rem;
        color: #666;
        line-height: 1.5;
    }

    .xemchitiet {
        background-color: while;
        color: white;
        font-size: 1rem;
        text-transform: uppercase;
        border-radius: 25px;
        padding: 12px 20px;
        transition: background-color 0.3s ease;
    }

        .xemchitiet:hover {
        background-color: #0056b3;
    }
</style>
