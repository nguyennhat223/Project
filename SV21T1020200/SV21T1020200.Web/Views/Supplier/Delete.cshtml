@model SV21T1020200.DomainModels.Supplier
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Supplier/Delete/@Model.SupplierID" method="post">
            <div class="form-group">
                <label>Tên khách hàng:</label>
                <p class="form-control-static form-control">@Model.SupplierName</p>
            </div>
            <div class="form-group">
                <label>Tên giao dịch:</label>
                <p class="form-control-static form-control">@Model.ContactName</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control-static form-control">@Model.Email</p>
            </div>
            <div class="form-group">
                <label>Địa chỉ:</label>
                <p class="form-control-static form-control">@Model.Address</p>
            </div>
            <div class="form-group text-right">
                @if (SV21T1020200.BussinessLayers.CommonDataService.InUsedSupplier(Model.SupplierID) == false)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

