@model SV21T1020200.DomainModels.Shipper
@{
    ViewBag.Title = "Xóa nhân viên giao hàng";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Shipper/Delete/@Model.ShipperID" method="post">
            <div class="form-group">
                <label>Tên nhân viên giao hàng:</label>
                <p class="form-control-static form-control">@Model.ShipperName</p>
            </div>
            <div class="form-group">
                <label>Điện thoại:</label>
                <p class="form-control-static form-control">@Model.Phone</p>
            </div>
            <div class="form-group text-right">
                @if (SV21T1020200.BussinessLayers.CommonDataService.InUsedShipper(Model.ShipperID) == false)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

