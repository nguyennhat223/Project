@model SV21T1020200.DomainModels.Category
@{
    ViewBag.Title = "Xóa nhà cung cấp";
}
<div class="box box-danger">
    <div class="box-body">
        <form action="~/Category/Delete/@Model.CategoryID" method="post">
            <div class="form-group">
                <label>Tên loại hàng:</label>
                <p class="form-control-static form-control">@Model.CategoryName</p>
            </div>
            <div class="form-group">
                <label>Mô tả:</label>
                <p class="form-control-static form-control">@Model.Description</p>
            </div>
            <div class="form-group text-right">
                @if (SV21T1020200.BussinessLayers.CommonDataService.InUsedCategory(Model.CategoryID) == false)
                {
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-floppy-o"></i> Xác nhận xóa
                    </button>
                }
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>
        </form>
    </div>
</div>

